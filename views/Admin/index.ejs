<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>न्यायसाधन - Admin</title>
    <link rel="shortcut icon" href="/images/logo44.png" type="image/x-icon">
    <link type="text/css" rel="stylesheet" href="css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Modal Background */
        .modal {
            display: none; /* Hidden by default */
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5); /* Black background with opacity */
        }
        
        /* Modal Content */
        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 700px;
            text-align: center;
        }
        
        /* Close Button */
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
        
        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <section id="sidebar">
        <div class="sidebar-brand">
            <h2><i class="fa fa-cogs"></i>न्यायसाधन<span></span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li><a href="/Admin"><i class="fa fa-desktop"></i> <span>Control</span></a></li>
                <li><a href="https://qrcodeeeeeee.netlify.app/" target="_blank"><i class="fa fa-users"></i> <span>Generate</span></a></li>
                <li><a href="#" onclick="openFeedbackModal()"><i class="fa fa-files-o"></i> <span>Feedback</span></a></li>
                <li><a href="#"><i class="fa fa-flag-checkered"></i> <span>Events</span></a></li>
                <li><a href="#"><i class="fa fa-briefcase"></i> <span>Clients</span></a></li>
                <li><a href="#"><i class="fa fa-cart-arrow-down"></i> <span>Orders</span></a></li>
                <li><a href="#" onclick="openBidsModal()"><i class="fa fa-inr"></i> <span>Bids</span></a></li>
                <div id="bidsModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeBidsModal()">&times;</span>
                        <h2>5</h2> <!-- Displaying number 5 -->
                    </div>
                </div>
                <div id="feedbackModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeFeedbackModal()">&times;</span>
                        <h2>Feedback List</h2>
                        <div id="feedbackList"></div>
                    </div>
                </div>
                <li><a href="#" onclick="openMapModal()"><i class="fa fa-map"></i> <span>District Map</span></a></li>
                <div id="mapModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeMapModal()">&times;</span>
                        <h2>Mathura City Map</h2>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d109196.33829439921!2d77.63521453854144!3d27.492413049122758!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3974773ef3e90ecf%3A0x95d398ef68aa72c5!2sMathura%2C%20Uttar%20Pradesh%2C%20India!5e0!3m2!1sen!2sus!4v1615553247316!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
                <li><a href="https://swachhbharatmission.gov.in/SBMGUPLOAD/writereaddata/Portal/Marquee/File/d96f153d-a_SBM_G__Ph-2_Guidelines_-_Hindi.pdf" target="_blank"><i class="fa fa-book"></i> <span>Documents</span></a></li>
                <li><a href="/AdminLogout"><i class="fa fa-sign-out"></i> <span>Log out</span></a></li>
            </ul>
        </div>
    </section>

    <section id="main-content">
        <header>
            <div class="header-left">
                <h2 class="toggle-btn">Sanjay Palace
                </h2>
            </div>
            <div class="header-left header-serach">
                <form action="/Admin" method="GET" class="serach-par">
                    <input class="search" type="text" name="search" placeholder="Search by location">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>            
            <div class="header-left header-profile">
                <img src="images/user.png" class="img-responsive" />
                <h3>Admin Name</h3> <!-- Static value for now -->
                <p>Last Login: 2024-11-14</p> <!-- Static value for now -->
            </div>
            <div class="clear"></div>
        </header>
        
        <div class="clear"></div>
        <div class="main-content-info container">
            <div class="card">
                <h2 class="cus-num cus-comp"><%= complainCount %></h2> <!-- Static value for now -->
                <p>Active FIRs</p>
            </div>
            <div class="card">
                <h2 class="cus-num cus-ord"><%= userCount %></h2> <!-- Static value for now -->
                <p>Total Users</p>
            </div>
            <div class="card">
                <h2 class="cus-num cus-bid"><%= lawyerCount %></h2> <!-- Static value for now -->
                <p>Active Lawyers</p>
            </div>
            <div class="card">
                <h2 class="cus-num cus-eve">3</h2> <!-- Static value for now -->
                <p>Active Events</p>
            </div>
            <div class="clear"></div>
        </div>

        <div class="content-pro-par container">
            <div class="pro-table">
                <div class="recent-project">
                    <div class="rec-pro-h">
                        <h2>Ongoing Tasks</h2><p>(10)</p> <!-- Static value for now -->
                    </div>
            
                    <div class="see-all">
                        <button>See all</button>
                    </div>
                    <div class="clear"></div>
                </div>
                <table style="width:100%">
                    <tr>
                        <th>Complain ID</th>
                        <th>Waste Type</th>
                        <th>Location</th>
                        <th>Status</th>
                    </tr>
                    <tr>
                        <td>1</td>
                        <td>Plastic</td>
                        <td>Mathura</td>
                        <td>
                            <span class="rev-span"></span>
                            Ongoing
                        </td>
                    </tr>
                    <!-- Add more static rows as needed -->
                </table>
                
            </div>
            
            <div class="pro-cus">
                <div class="recent-project">
                    <div class="rec-pro-h">
                        <h2>Lawyers</h2>
                    </div>
                    <table style="width:100%">
                        <tr>
                            <th>Name</th>
                            <th>Wins</th>
                            <th>&nbsp;&nbsp;&nbsp;Contact</th>
                        </tr>
                        <% lawyer.forEach(user => { %>
                            <tr>
                                <td><%= user.username %> [<%= user.gender %>]</td> <!-- Adjust gender if needed -->
                                <td>
                                    <span class="rev-span">&nbsp;&nbsp;&nbsp;<%= user.caseWin %>/<%= user.caseLoss+user.caseWin %></span>
                                    <span class="green-dot"></span>
                                </td>
                                <td class="cnt-info-td">&nbsp;&nbsp;&nbsp;<i class="fa fa-phone"><%= user.phone %></i></td>
                            </tr>
                        <% }); %>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Feedback Modal
        function openFeedbackModal() {
            document.getElementById("feedbackModal").style.display = "block";
        }

        function closeFeedbackModal() {
            document.getElementById("feedbackModal").style.display = "none";
        }

        // Bids Modal
        function openBidsModal() {
            document.getElementById("bidsModal").style.display = "block";
        }

        function closeBidsModal() {
            document.getElementById("bidsModal").style.display = "none";
        }

        // Map Modal
        function openMapModal() {
            document.getElementById("mapModal").style.display = "block";
        }

        function closeMapModal() {
            document.getElementById("mapModal").style.display = "none";
        }
    </script>
</body>
</html>
