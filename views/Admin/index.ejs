<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>न्यायसाधन - Admin</title>
    <link rel="shortcut icon" href="/images/logo44.png" type="image/x-icon">
    <link type="text/css" rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        #feedbackList ul {
            list-style-type: none;
            padding: 0;
        }

        #feedbackList ul li {
            padding: 8px 0;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        #feedbackList ul li:last-child {
            border-bottom: none;
        }
    </style>

    <style>
        /* Modal Background */
        .modal {
            display: none;
            /* Hidden by default */
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            /* Black background with opacity */
        }

        /* Modal Content */
        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 700px;
            text-align: center;
        }

        /* Close Button */
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

        button[type="submit"][style*="red"] {
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            border-radius: 5px;
        }

        button[type="submit"]:hover {
            opacity: 0.8;
        }
    </style>


</head>

<body>
    <section id="sidebar">
        <div class="sidebar-brand">
            <h2><i class="fa fa-cogs"></i>न्यायसाधन<span></span></h2>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li><a href="/Admin"><i class="fa fa-desktop"></i> <span>Control</span></a></li>
                <li><a href="https://qrcodeeeeeee.netlify.app/" target="_blank"><i class="fa fa-users"></i>
                        <span>Generate</span></a></li>
                <li><a href="#" onclick="openFeedbackModal()"><i class="fa fa-files-o"></i> <span>Users</span></a></li>
                <li><a href="#"><i class="fa fa-flag-checkered"></i> <span>Feedback</span></a></li>
                <li><a href="#"><i class="fa fa-briefcase"></i> <span>Clients</span></a></li>
                <li><a href="#"><i class="fa fa-cart-arrow-down"></i> <span>Orders</span></a></li>
                <li><a href="#" onclick="openBidsModal()"><i class="fa fa-inr"></i> <span>Bids</span></a></li>
                <div id="bidsModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeBidsModal()">&times;</span>
                        <h2>5</h2> <!-- Displaying number 5 -->
                    </div>
                </div>
                <div id="feedbackModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeFeedbackModal()">&times;</span>
                        <h2>Users List</h2>
                        <div id="feedbackList">
                            <ul style="color: #000;">
                                <% users.forEach(user=> { %>
                                    <li>
                                        <strong>Name:</strong>
                                        <%= user.username %>
                                            | <strong>Email:</strong>
                                            <%= user.email %>
                                                | <strong>Last Login:</strong>
                                                <%= user.lastLogin.toString().substring(0, 28) || Date() %>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
                <li><a href="https://swachhbharatmission.gov.in/SBMGUPLOAD/writereaddata/Portal/Marquee/File/d96f153d-a_SBM_G__Ph-2_Guidelines_-_Hindi.pdf"
                        target="_blank"><i class="fa fa-book"></i> <span>Documents</span></a></li>
                <li><a href="/AdminLogout"><i class="fa fa-sign-out"></i> <span>Log out</span></a></li>
            </ul>
        </div>
    </section>

    <section id="main-content">
        <header>
            <div class="header-left">
                <h2 class="toggle-btn"><i class="fa fa-bars" id="toggle-sidebar"
                        style="margin-right: 10px; cursor: pointer;"></i> Sanjay Palace</h2>
            </div>
            <div class="header-left header-serach">
                <form action="/Admin" method="GET" class="serach-par">
                    <input class="search" type="text" name="search" placeholder="Search by FIR loaction or name">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
            <div class="header-left header-profile">
                <img src="/images/user.png" class="img-responsive" />
                <h3>Admin Name</h3> <!-- Static value for now -->
                <p>Last Login: 2024-11-14</p> <!-- Static value for now -->
            </div>
            <div class="clear"></div>
        </header>

        <div class="clear"></div>
        <div class="main-content-info container">
            <div class="card">
                <h2 class="cus-num cus-comp">
                    <%= complainCount %>
                </h2> <!-- Static value for now -->
                <p>Active FIRs</p>
            </div>
            <div class="card">
                <h2 class="cus-num cus-ord">
                    <%= userCount %>
                </h2> <!-- Static value for now -->
                <p>Total Users</p>
            </div>
            <div class="card">
                <h2 class="cus-num cus-bid">
                    <%= lawyerCount %>
                </h2> <!-- Static value for now -->
                <p>Active Lawyers</p>
            </div>
            <div class="card">
                <h2 class="cus-num cus-eve">3</h2> <!-- Static value for now -->
                <p>Active Events</p>
            </div>
            <div class="clear"></div>
        </div>

        <div class="content-pro-par container">
            <div class="pro-table">
                <div class="recent-project">
                    <div class="rec-pro-h">
                        <h2>Ongoing FIR's</h2>
                        <p>(<%= complainCount %>)</p> <!-- Static value for now -->
                    </div>

                    <div class="see-all">
                        <button>See All</button>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="table-responsive">
                    <table style="width:100%">
                        <tr>
                            <th>Complain ID</th>
                            <th>Username</th>
                            <th>Location</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                        <% complain.forEach(cp=> { %>
                            <tr>
                                <td>
                                    <%= cp._id.toString().substring(0, 6) %>
                                </td>
                                <td>
                                    <%= cp.firstName %>
                                </td>
                                <td>
                                    <%= cp.address.substring(0,30) %>
                                </td>
                                <td>
                                    <i class="fa fa-phone">
                                        <%= cp.phone %>
                                    </i>
                                </td>
                                <td>
                                    <%= cp.status || 'Pending' %>
                                </td>
                                <td>
                                    <% if (cp.status==='Resolved' ) { %>
                                        <form action="/Admin/delete/<%= cp._id %>" method="POST">
                                            <button type="submit" style="background: red; color: white;">Delete</button>
                                        </form>
                                        <% } else { %>
                                            <form action="/Admin/resolve/<%= cp._id %>" method="POST">
                                                <button type="submit">Resolve</button>
                                            </form>
                                            <% } %>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                </div>
            </div>
            <div class="pro-cus">
                <div class="recent-project">
                    <div class="rec-pro-h">
                        <h2>Lawyers (<%= lawyerCount %>)</h2>
                    </div>
                    <div class="table-responsive">
                        <table style="width:100%">
                            <tr>
                                <th>Name</th>
                                <th>Wins</th>
                                <th>&nbsp;&nbsp;&nbsp;Contact</th>
                            </tr>
                            <% lawyer.forEach(user=> { %>
                                <tr>
                                    <td>
                                        <%= user.username %> [<%= user.gender %>]
                                    </td> <!-- Adjust gender if needed -->
                                    <td>
                                        <span class="rev-span">&nbsp;&nbsp;&nbsp;<%= user.caseWin %>/<%=
                                                    user.caseLoss+user.caseWin %></span>
                                        <span class="green-dot"></span>
                                    </td>
                                    <td class="cnt-info-td">
                                        &nbsp;&nbsp;&nbsp;
                                        <a href="tel:<%= user.phone %>" style="color: red;">
                                            <i class="fa fa-phone"></i>
                                            <%= user.phone %>
                                        </a>
                                    </td>
                                </tr>
                                <% }); %>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </section>

    <script>
        // Feedback Modal
        function openFeedbackModal() {
            document.getElementById("feedbackModal").style.display = "block";
        }

        function closeFeedbackModal() {
            document.getElementById("feedbackModal").style.display = "none";
        }

        // Bids Modal
        function openBidsModal() {
            document.getElementById("bidsModal").style.display = "block";
        }

        function closeBidsModal() {
            document.getElementById("bidsModal").style.display = "none";
        }

        // Map Modal
        function openMapModal() {
            document.getElementById("mapModal").style.display = "block";
        }

        function closeMapModal() {
            document.getElementById("mapModal").style.display = "none";
        }

        // Sidebar Toggle
        const toggleBtn = document.getElementById('toggle-sidebar');
        const sidebar = document.getElementById('sidebar');

        toggleBtn.addEventListener('click', function (e) {
            e.stopPropagation();
            sidebar.classList.toggle('active');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function (e) {
            const isClickInsideSidebar = sidebar.contains(e.target);
            const isClickOnToggle = toggleBtn.contains(e.target);

            if (!isClickInsideSidebar && !isClickOnToggle && sidebar.classList.contains('active')) {
                sidebar.classList.remove('active');
            }
        });
    </script>
</body>

</html>